{
  "prettier.tslintIntegration": true,
  "typescript.format.enabled": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "typescript"
    //"json"
    //"jsonc"
    //"php"
  ],
  //"semanticTokens.filetypes": ["*"],
  "coc.preferences.rootPatterns": [
    ".git",
    "poetry.lock",
    "package-lock.json",
    ".ccls-root",
    ".hg",
    ".projections.json"
  ],
  //"diagnostic.hintSign": ">>",
  //"diagnostic.hintSign": "üí≠",
  "diagnostic.hintSign": "œÜ",
  //"diagnostic.infoSign": "‚ÑπÔ∏è",
  "diagnostic.infoSign": "i",
  //"diagnostic.infoSign": "‚òù",
  "diagnostic.warningSign": "‚ñ≤",
  //"diagnostic.warningSign": "‚ö†Ô∏è",
  //"diagnostic.warningSign": "‚ò¢",
  //"diagnostic.errorSign": "üö®",
  "diagnostic.errorSign": "‚ñ†",
  //"diagnostic.errorSign": "üí£",
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "email": "languagetool",
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black", "isort", "docformatter"]
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["black", "-q", "-"]
    },
    "isort": {
      "command": "isort",
      "args": ["-q", "-"]
    },
    "docformatter": {
      "command": "docformatter",
      "args": ["-"]
    }
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "markdownlint.config": {
    "line-length": false,
    "MD022": false,
    "MD032": false,
    "MD033": false, // inline HTML shouldn't be forbidden (<a name="asdf"></a>...[goto](#asdf))
    "MD034": false,
    "MD044": false,
    "MD004": false,
    "MD025": { "front_matter_title": "" }
  },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".git", ".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  "jest.customFlags": ["--config ./jest.base.json"],
  "python.formatting.provider": "black",
  "suggest.noselect": true,
  "java.configuration.runtimes": [
    {
      "name": "OpenJDK 18",
      "path": "/usr/lib/jvm/java-18-openjdk"
    }
  ],
  "java.format.settings.url": "/home/nikola/.dotfiles/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",
  "java.jdt.ls.vmargs": "-noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:\"/home/nikola/.dotfiles/.config/coc/extensions/node_modules/coc-java-lombok/jar/lombok.jar\""
}
