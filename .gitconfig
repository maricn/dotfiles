    email = 3995223+maricn@users.noreply.github.com
    name = Nikola MariÄ‡
[hub]
    protocol = https
[core]
    editor = nvim
    pager = delta
    excludesFile = ~/.dotfiles/.gitignore_global

[delta]
    plus-style = syntax "#012800"
    minus-style = normal "#340001"
    syntax-theme = Monokai Extended
[interactive]
    diffFilter = delta --color-only

[pull]
    rebase = false
[alias]
    project-summary = !which onefetch && onefetch
[init]
    defaultBranch = main

[diff "odt"]
    textconv = odt2txt
    binary = true
[diff "word"]
    textconv = catdoc
    binary = true
[diff "xls"]
    textconv = xls2csv
    binary = true
[diff "ppt"]
    textconv = catppt
    binary = true

[includeIf "gitdir:~/Workspace/"]
    path = ~/Workspace/.mimi.gitconfig
