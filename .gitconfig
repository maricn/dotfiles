[hub]
    protocol = https
[core]
    editor = nvim
    pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'
    excludesFile = ~/.dotfiles/.gitignore_global
[interactive]
    diffFilter = delta --color-only
[pull]
    rebase = false
[alias]
	project-summary = !which onefetch && onefetch
[init]
	defaultBranch = main
[diff "odt"]
    textconv = odt2txt
    binary = true
[diff "word"]
  textconv = catdoc
  binary = true
[diff "xls"]
  textconv = xls2csv
  binary = true
[diff "ppt"]
  textconv = catppt
  binary = true
