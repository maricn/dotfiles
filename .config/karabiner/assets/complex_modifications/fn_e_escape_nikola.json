{
  "title": "Escape key on (CL|Fn) + e & Delete key on (CL|FN) + d - Nikola",
  "rules": [
    {
      "description": "Change (CL|Fn) + d to Delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "control",
                "command",
                "option",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_forward"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "caps_lock"
              ],
              "optional": [
                "fn",
                "control",
                "command",
                "option",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_forward"
            }
          ]
        }
      ]
    },
    {
      "description": "Change (CL|Fn) + e to Escape",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "control",
                "command",
                "option",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "caps_lock"
              ],
              "optional": [
                "fn",
                "control",
                "command",
                "option",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
