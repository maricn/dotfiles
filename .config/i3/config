# System exit
mode "exit: [l]ock, [r]eboot, [s]leep" {
  bindsym l mode "default", exec xscreensaver-command -lock
  bindsym r mode "default", exec sudo reboot
  # since xautolock uses very slow i3lock-fancy (due to imagemagick)
  # we turn off the display and wait for three seconds to actually lock
  # and only then go to suspend
  bindsym s mode "default", exec --no-startup-id xautolock -detectsleep -locknow && sleep 2 && sudo pm-suspend
  # xautolock -locknow && xset dpms force off && sleep 3 && sudo pm-suspend
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+x mode "default"
}
bindsym $mod+x mode "exit: [l]ock, [r]eboot, [s]leep"


